<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/pink"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="50dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/ic_outline_account_circle_24"
            android:layout_height="50dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/flag"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select City"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_qr_code_scanner_24"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_help_outline_24"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="350dp"
        android:src="@drawable/add4"
        android:layout_gravity="center"
        android:background="@drawable/roundcorners"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="120dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundcorners"
        android:layout_height="380dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundd"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Month"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:padding="8dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_arrow_drop4"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundd"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Categegories"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:padding="8dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_arrow_drop4"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundd"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Filters"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:padding="8dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_arrow_drop4"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/listview"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="31dp"
            android:background="@drawable/circleshape"
            android:src="@drawable/ic_outline_home_24"
            android:layout_height="35dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/circleshape"
            android:src="@drawable/ic_outline_lock_24"
            android:layout_height="35dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/circleshape"
            android:src="@drawable/ic_outline_gpp_good_24"
            android:layout_height="35dp"/>
        <TextView
            android:layout_width="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="center"
            android:text="â‚¹"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:background="@drawable/circleshape"
            android:layout_height="35dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_baseline_swap_horiz_24"
            android:layout_height="35dp"/>
    </LinearLayout>
</LinearLayout>